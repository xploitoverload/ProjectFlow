include README.md
include LICENSE
include requirements.txt
include .env.example
include runtime.txt
include Procfile
include render.yaml
include pyproject.toml
include setup.cfg

# Include all configuration files
include config.py
include models.py
include security.py

# Include templates
recursive-include templates *.html
recursive-include templates *.jinja2
recursive-include templates *.j2

# Include static files
recursive-include static *.css
recursive-include static *.js
recursive-include static *.png
recursive-include static *.jpg
recursive-include static *.svg
recursive-include static *.ico
recursive-include static *.woff
recursive-include static *.woff2
recursive-include static *.ttf

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo
global-exclude .git*
global-exclude logs/*
global-exclude *.egg-info
