<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Sign in to ProjectFlow - Enterprise Project Management">
    <meta name="csrf-token" content="{{ csrf_token() }}">
    <title>Sign In - ProjectFlow</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <link rel="stylesheet" href="{{ url_for('static', filename='css/design-system.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/icons.css') }}">
    
    <style>
        /* =====================================================
           LOGIN PAGE - Enterprise Design
           Inspired by Linear, Vercel, Stripe
           ===================================================== */
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html {
            font-size: 16px;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--gray-50);
            min-height: 100vh;
            display: flex;
            color: var(--gray-900);
        }
        
        [data-theme="dark"] body {
            background: var(--gray-950);
            color: var(--gray-100);
        }
        
        /* Split Layout */
        .login-container {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }
        
        /* Left Panel - Branding */
        .login-branding {
            flex: 1;
            background: linear-gradient(135deg, var(--gray-900) 0%, var(--gray-800) 100%);
            display: none;
            flex-direction: column;
            justify-content: space-between;
            padding: var(--space-10);
            position: relative;
            overflow: hidden;
        }
        
        @media (min-width: 1024px) {
            .login-branding {
                display: flex;
            }
        }
        
        .login-branding::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 80%, rgba(99, 102, 241, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(139, 92, 246, 0.1) 0%, transparent 40%);
            pointer-events: none;
        }
        
        /* Grid pattern overlay */
        .login-branding::after {
            content: '';
            position: absolute;
            inset: 0;
            background-image: 
                linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
            background-size: 60px 60px;
            pointer-events: none;
        }
        
        .branding-content {
            position: relative;
            z-index: 1;
        }
        
        .branding-logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            margin-bottom: var(--space-16);
        }
        
        .branding-logo-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--primary-500) 0%, var(--primary-600) 100%);
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }
        
        .branding-logo-text {
            font-size: var(--text-xl);
            font-weight: 700;
            color: white;
            letter-spacing: -0.025em;
        }
        
        .branding-headline {
            font-size: 2.75rem;
            font-weight: 700;
            color: white;
            line-height: 1.2;
            letter-spacing: -0.03em;
            margin-bottom: var(--space-6);
            max-width: 480px;
        }
        
        .branding-description {
            font-size: var(--text-lg);
            color: var(--gray-400);
            line-height: 1.6;
            max-width: 420px;
        }
        
        .branding-features {
            position: relative;
            z-index: 1;
            display: flex;
            flex-direction: column;
            gap: var(--space-4);
        }
        
        .feature-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            color: var(--gray-300);
            font-size: var(--text-sm);
        }
        
        .feature-icon {
            width: 20px;
            height: 20px;
            color: var(--primary-400);
        }
        
        /* Right Panel - Form */
        .login-form-panel {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: var(--space-8);
            max-width: 560px;
            margin: 0 auto;
        }
        
        @media (min-width: 1024px) {
            .login-form-panel {
                padding: var(--space-16);
            }
        }
        
        .form-container {
            width: 100%;
            max-width: 400px;
        }
        
        /* Mobile Logo */
        .mobile-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-3);
            margin-bottom: var(--space-10);
        }
        
        @media (min-width: 1024px) {
            .mobile-logo {
                display: none;
            }
        }
        
        .mobile-logo-icon {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, var(--primary-500) 0%, var(--primary-600) 100%);
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }
        
        .mobile-logo-text {
            font-size: var(--text-lg);
            font-weight: 700;
            color: var(--gray-900);
        }
        
        [data-theme="dark"] .mobile-logo-text {
            color: white;
        }
        
        /* Form Header */
        .form-header {
            text-align: center;
            margin-bottom: var(--space-8);
        }
        
        .form-title {
            font-size: var(--text-2xl);
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: var(--space-2);
            letter-spacing: -0.025em;
        }
        
        [data-theme="dark"] .form-title {
            color: white;
        }
        
        .form-subtitle {
            font-size: var(--text-sm);
            color: var(--gray-500);
        }
        
        /* Alert Messages */
        .alert {
            display: flex;
            align-items: flex-start;
            gap: var(--space-3);
            padding: var(--space-4);
            border-radius: var(--radius-lg);
            margin-bottom: var(--space-6);
            font-size: var(--text-sm);
            line-height: 1.5;
        }
        
        .alert-icon {
            flex-shrink: 0;
            width: 20px;
            height: 20px;
        }
        
        .alert-error {
            background: var(--error-50);
            color: var(--error-700);
            border: 1px solid var(--error-200);
        }
        
        .alert-error .alert-icon {
            color: var(--error-500);
        }
        
        .alert-success {
            background: var(--success-50);
            color: var(--success-700);
            border: 1px solid var(--success-200);
        }
        
        .alert-success .alert-icon {
            color: var(--success-500);
        }
        
        [data-theme="dark"] .alert-error {
            background: rgba(239, 68, 68, 0.1);
            border-color: rgba(239, 68, 68, 0.2);
        }
        
        [data-theme="dark"] .alert-success {
            background: rgba(16, 185, 129, 0.1);
            border-color: rgba(16, 185, 129, 0.2);
        }
        
        /* Form Groups */
        .form-group {
            margin-bottom: var(--space-5);
        }
        
        .form-label {
            display: block;
            font-size: var(--text-sm);
            font-weight: 500;
            color: var(--gray-700);
            margin-bottom: var(--space-2);
        }
        
        [data-theme="dark"] .form-label {
            color: var(--gray-300);
        }
        
        .input-wrapper {
            position: relative;
        }
        
        .input-icon {
            position: absolute;
            left: var(--space-4);
            top: 50%;
            transform: translateY(-50%);
            width: 20px;
            height: 20px;
            color: var(--gray-400);
            pointer-events: none;
            transition: color var(--transition-fast);
        }
        
        .form-input {
            width: 100%;
            height: 48px;
            padding: 0 var(--space-4) 0 var(--space-12);
            font-size: var(--text-base);
            font-family: inherit;
            color: var(--gray-900);
            background: white;
            border: 1px solid var(--gray-300);
            border-radius: var(--radius-lg);
            transition: all var(--transition-fast);
        }
        
        .form-input::placeholder {
            color: var(--gray-400);
        }
        
        .form-input:hover {
            border-color: var(--gray-400);
        }
        
        .form-input:focus {
            outline: none;
            border-color: var(--primary-500);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        }
        
        [data-theme="dark"] .form-input {
            background: var(--gray-900);
            border-color: var(--gray-700);
            color: white;
        }
        
        [data-theme="dark"] .form-input:hover {
            border-color: var(--gray-600);
        }
        
        [data-theme="dark"] .form-input:focus {
            border-color: var(--primary-500);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
        }
        
        /* Password toggle */
        .password-toggle {
            position: absolute;
            right: var(--space-4);
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: var(--gray-400);
            padding: var(--space-1);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .password-toggle:hover {
            color: var(--gray-600);
        }
        
        [data-theme="dark"] .password-toggle:hover {
            color: var(--gray-300);
        }
        
        /* Form Footer */
        .form-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: var(--space-6);
            font-size: var(--text-sm);
        }
        
        .remember-me {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            color: var(--gray-600);
            cursor: pointer;
        }
        
        .remember-me input[type="checkbox"] {
            width: 16px;
            height: 16px;
            accent-color: var(--primary-500);
        }
        
        [data-theme="dark"] .remember-me {
            color: var(--gray-400);
        }
        
        .forgot-link {
            color: var(--primary-600);
            text-decoration: none;
            font-weight: 500;
            transition: color var(--transition-fast);
        }
        
        .forgot-link:hover {
            color: var(--primary-700);
        }
        
        [data-theme="dark"] .forgot-link {
            color: var(--primary-400);
        }
        
        /* Submit Button */
        .btn-submit {
            width: 100%;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-2);
            font-size: var(--text-base);
            font-weight: 600;
            font-family: inherit;
            color: white;
            background: var(--gray-900);
            border: none;
            border-radius: var(--radius-lg);
            cursor: pointer;
            transition: all var(--transition-fast);
        }
        
        .btn-submit:hover {
            background: var(--gray-800);
        }
        
        .btn-submit:focus-visible {
            outline: 2px solid var(--primary-500);
            outline-offset: 2px;
        }
        
        .btn-submit:active {
            transform: scale(0.98);
        }
        
        .btn-submit:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        [data-theme="dark"] .btn-submit {
            background: white;
            color: var(--gray-900);
        }
        
        [data-theme="dark"] .btn-submit:hover {
            background: var(--gray-100);
        }
        
        /* Loading state */
        .btn-submit.loading .btn-text {
            visibility: hidden;
        }
        
        .btn-submit .btn-spinner {
            display: none;
            position: absolute;
        }
        
        .btn-submit.loading .btn-spinner {
            display: block;
            animation: spin 0.8s linear infinite;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        /* Demo Credentials */
        .demo-card {
            background: var(--gray-50);
            border: 1px solid var(--gray-200);
            border-radius: var(--radius-lg);
            padding: var(--space-4);
            margin-top: var(--space-6);
        }
        
        [data-theme="dark"] .demo-card {
            background: var(--gray-800);
            border-color: var(--gray-700);
        }
        
        .demo-title {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            font-size: var(--text-sm);
            font-weight: 600;
            color: var(--gray-700);
            margin-bottom: var(--space-3);
        }
        
        [data-theme="dark"] .demo-title {
            color: var(--gray-300);
        }
        
        .demo-credentials {
            display: grid;
            gap: var(--space-2);
        }
        
        .credential-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: var(--space-2) var(--space-3);
            background: white;
            border-radius: var(--radius-md);
            font-size: var(--text-sm);
        }
        
        [data-theme="dark"] .credential-row {
            background: var(--gray-900);
        }
        
        .credential-role {
            color: var(--gray-600);
            font-weight: 500;
        }
        
        [data-theme="dark"] .credential-role {
            color: var(--gray-400);
        }
        
        .credential-value {
            font-family: var(--font-mono);
            font-size: var(--text-xs);
            color: var(--primary-600);
            background: var(--primary-50);
            padding: var(--space-1) var(--space-2);
            border-radius: var(--radius-sm);
        }
        
        [data-theme="dark"] .credential-value {
            background: rgba(99, 102, 241, 0.2);
            color: var(--primary-400);
        }
        
        /* Theme Toggle */
        .theme-toggle {
            position: fixed;
            top: var(--space-4);
            right: var(--space-4);
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--gray-100);
            border: 1px solid var(--gray-200);
            border-radius: var(--radius-lg);
            cursor: pointer;
            color: var(--gray-600);
            transition: all var(--transition-fast);
            z-index: 100;
        }
        
        .theme-toggle:hover {
            background: var(--gray-200);
        }
        
        [data-theme="dark"] .theme-toggle {
            background: var(--gray-800);
            border-color: var(--gray-700);
            color: var(--gray-400);
        }
        
        [data-theme="dark"] .theme-toggle:hover {
            background: var(--gray-700);
        }
        
        .theme-toggle .icon-sun,
        [data-theme="dark"] .theme-toggle .icon-moon {
            display: none;
        }
        
        [data-theme="dark"] .theme-toggle .icon-sun {
            display: block;
        }
        
        .theme-toggle .icon-moon {
            display: block;
        }
        
        [data-theme="dark"] .theme-toggle .icon-moon {
            display: none;
        }
        
        /* Footer Link */
        .login-footer {
            text-align: center;
            margin-top: var(--space-6);
        }
        
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            color: var(--gray-500);
            font-size: var(--text-sm);
            font-weight: 500;
            text-decoration: none;
            transition: color var(--transition-fast);
        }
        
        .back-link:hover {
            color: var(--gray-700);
        }
        
        [data-theme="dark"] .back-link:hover {
            color: var(--gray-300);
        }
        
        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .form-container {
            animation: fadeIn 0.4s ease-out;
        }
        
        /* Responsive */
        @media (max-width: 480px) {
            .form-container {
                padding: 0 var(--space-2);
            }
            
            .form-footer {
                flex-direction: column;
                gap: var(--space-3);
            }
        }
    </style>
</head>
<body>
    <!-- Theme Toggle -->
    <button class="theme-toggle" onclick="toggleTheme()" aria-label="Toggle theme">
        <i data-lucide="sun" class="icon icon-sun"></i>
        <i data-lucide="moon" class="icon icon-moon"></i>
    </button>
    
    <div class="login-container">
        <!-- Left Branding Panel -->
        <div class="login-branding">
            <div class="branding-content">
                <div class="branding-logo">
                    <div class="branding-logo-icon">
                        <i data-lucide="layers" class="icon-lg"></i>
                    </div>
                    <span class="branding-logo-text">ProjectFlow</span>
                </div>
                
                <h1 class="branding-headline">
                    Manage projects with clarity and precision
                </h1>
                <p class="branding-description">
                    Streamline your workflow, collaborate seamlessly, and deliver projects on time with our enterprise-grade management platform.
                </p>
            </div>
            
            <div class="branding-features">
                <div class="feature-item">
                    <i data-lucide="check-circle" class="feature-icon"></i>
                    <span>Real-time collaboration across teams</span>
                </div>
                <div class="feature-item">
                    <i data-lucide="check-circle" class="feature-icon"></i>
                    <span>Advanced reporting and analytics</span>
                </div>
                <div class="feature-item">
                    <i data-lucide="check-circle" class="feature-icon"></i>
                    <span>Enterprise-grade security</span>
                </div>
                <div class="feature-item">
                    <i data-lucide="check-circle" class="feature-icon"></i>
                    <span>99.9% uptime guarantee</span>
                </div>
            </div>
        </div>
        
        <!-- Right Form Panel -->
        <div class="login-form-panel">
            <div class="form-container">
                <!-- Mobile Logo -->
                <div class="mobile-logo">
                    <div class="mobile-logo-icon">
                        <i data-lucide="layers" class="icon-md"></i>
                    </div>
                    <span class="mobile-logo-text">ProjectFlow</span>
                </div>
                
                <!-- Form Header -->
                <div class="form-header">
                    <h2 class="form-title">Welcome back</h2>
                    <p class="form-subtitle">Sign in to your account to continue</p>
                </div>
                
                <!-- Error/Success Messages -->
                {% with messages = get_flashed_messages(with_categories=true) %}
                    {% if messages %}
                        {% for category, message in messages %}
                            <div class="alert alert-{{ category }}" role="alert">
                                {% if category == 'error' %}
                                    <i data-lucide="alert-circle" class="alert-icon"></i>
                                {% else %}
                                    <i data-lucide="check-circle" class="alert-icon"></i>
                                {% endif %}
                                <span>{{ message }}</span>
                            </div>
                        {% endfor %}
                    {% endif %}
                {% endwith %}
                
                <!-- Login Form -->
                <form class="login-form" method="POST" action="{{ url_for('auth.login') }}" id="loginForm">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                    
                    <div class="form-group">
                        <label class="form-label" for="username">Username</label>
                        <div class="input-wrapper">
                            <input 
                                type="text" 
                                id="username" 
                                name="username" 
                                class="form-input" 
                                placeholder="Enter your username"
                                autocomplete="username"
                                required
                                autofocus
                                pattern="[a-zA-Z0-9_]{3,20}"
                                title="3-20 characters: letters, numbers, and underscores only"
                            >
                            <i data-lucide="user" class="input-icon"></i>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" for="password">Password</label>
                        <div class="input-wrapper">
                            <input 
                                type="password" 
                                id="password" 
                                name="password" 
                                class="form-input" 
                                placeholder="Enter your password"
                                autocomplete="current-password"
                                required
                                minlength="8"
                            >
                            <i data-lucide="lock" class="input-icon"></i>
                            <button type="button" class="password-toggle" onclick="togglePassword()" aria-label="Toggle password visibility">
                                <i data-lucide="eye" class="icon-sm" id="eyeIcon"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="form-footer">
                        <label class="remember-me">
                            <input type="checkbox" name="remember" value="1">
                            <span>Remember me</span>
                        </label>
                    </div>
                    
                    <button type="submit" class="btn-submit" id="submitBtn">
                        <span class="btn-text">Sign in</span>
                        <i data-lucide="loader-2" class="icon-sm btn-spinner"></i>
                    </button>
                </form>
                
                <!-- Demo Credentials -->
                <div class="demo-card">
                    <div class="demo-title">
                        <i data-lucide="info" class="icon-sm"></i>
                        <span>Demo Credentials</span>
                    </div>
                    <div class="demo-credentials">
                        <div class="credential-row">
                            <span class="credential-role">Admin</span>
                            <span class="credential-value">admin / admin123</span>
                        </div>
                        <div class="credential-row">
                            <span class="credential-role">Employee</span>
                            <span class="credential-value">employee / emp123</span>
                        </div>
                    </div>
                </div>
                
                <!-- Footer Link -->
                <footer class="login-footer">
                    <a href="{{ url_for('main.index') }}" class="back-link">
                        <i data-lucide="arrow-left" class="icon-sm"></i>
                        <span>Back to Home</span>
                    </a>
                </footer>
            </div>
        </div>
    </div>
    
    <script>
        // Initialize Lucide icons
        lucide.createIcons();
        
        // Theme toggle
        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            lucide.createIcons();
        }
        
        // Load saved theme
        (function() {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                document.documentElement.setAttribute('data-theme', savedTheme);
            } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                document.documentElement.setAttribute('data-theme', 'dark');
            }
        })();
        
        // Password visibility toggle
        function togglePassword() {
            const input = document.getElementById('password');
            const icon = document.getElementById('eyeIcon');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.setAttribute('data-lucide', 'eye-off');
            } else {
                input.type = 'password';
                icon.setAttribute('data-lucide', 'eye');
            }
            lucide.createIcons();
        }
        
        // Form submission with loading state
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const btn = document.getElementById('submitBtn');
            btn.classList.add('loading');
            btn.disabled = true;
        });
    </script>
</body>
</html>