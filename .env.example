# Project Management System - Environment Configuration
# =====================================================
# Copy this file to .env and configure for your environment
# NEVER commit .env to version control!

# Application Settings
# --------------------
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production
APP_NAME=Project Management System
APP_VERSION=2.0.0

# Server Configuration
# --------------------
HOST=0.0.0.0
PORT=5000

# Database Configuration
# ----------------------
# SQLite (Development)
DATABASE_URL=sqlite:///instance/project_management.db

# PostgreSQL (Production recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/project_mgmt

# MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/project_mgmt

# Redis Configuration (Optional - for production caching & rate limiting)
# -----------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379/0

# Security Settings
# -----------------
# Session timeout in minutes
SESSION_TIMEOUT=30

# Maximum failed login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes
LOCKOUT_DURATION=15

# Password expiry in days (0 = never expire)
PASSWORD_EXPIRY_DAYS=90

# Rate Limiting
# -------------
RATELIMIT_DEFAULT=200 per day
RATELIMIT_STORAGE_URL=memory://
# For production with Redis:
# RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Email Configuration (for password reset)
# ----------------------------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourapp.com

# Logging
# -------
LOG_LEVEL=INFO
LOG_TO_STDOUT=false

# Feature Flags
# -------------
ENABLE_2FA=true
ENABLE_AUDIT_LOGGING=true
ENABLE_API_DOCS=true

# Admin Account (Initial Setup)
# ----------------------------
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-immediately

# External Integrations (Optional)
# --------------------------------
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# SLACK_WEBHOOK_URL=
# SENTRY_DSN=

# SSL/TLS Configuration (Production)
# ----------------------------------
# FORCE_HTTPS=true
# SSL_REDIRECT=true
